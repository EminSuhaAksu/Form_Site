            }

                .category-list-sag > div > a {
                    line-height: 25px
                }
    </style>
</div>

<div class="page-container clearfix" id="main-wrap">

    <div id="left-frame">


        <div class="titles">

            <h5 style="color:red;">
                <center>
                    <br />
                    Konular
                </center>
            </h5>
            <hr />
            <ul class="index-list" id="sol-index-list">

                @foreach (var item in Model.TBL_Konu)
                {
                    <li class="clearfix index-list-li">
                        <a class="clearfix index-link" href="/Home/Entri_Detay/@item.ID" target="_blank">
                            <div class="index-image">
                                <img src="@item.Kapak_Foto" />
                            </div>
                        </a>
                        <a class="clearfix index-content" href="/Home/Entri_Detay/@item.ID">
                            <div class="index-title" title="">
                                @item.Ad
                            </div>
                        </a>
                    </li>
                }




            </ul>
            <script>
                if (window.sessionStorage) {
                    var spEx = sessionStorage.getItem("sp");
                    var spNew = 'gundem';
                    if (spEx == spNew) {
                        document.getElementById("sol-index-list").scrollTop = sessionStorage.getItem("sideScrollPosition");
                    } else {
                        sessionStorage.setItem("sp", spNew);
                        sessionStorage.setItem("sideScrollPosition", 0);
                    }
                    spEx = spNew = null;
                }
            </script>
        </div>
    </div><!--left-frame sonu-->

    <div id="content">


        <!-- reklam alani -->
        <!-- Admatic masthead 970x250 Ad Code START -->
