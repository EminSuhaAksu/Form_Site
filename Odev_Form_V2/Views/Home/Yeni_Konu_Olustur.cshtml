        <script src="../../../cdn2.admatic.com.tr/showad/showad.js" async></script>
        <!-- Admatic masthead 970x250 Ad Code END -->

        <div id="right-container" class="clearfix ">




            <div id="middle-block" class="col-md-9">

                <div class="col-md-12" style="background-color:white">
                    <h5 class="wbox_title">Yeni Konu Açma</h5>
                </div>
                <br />
                <br />
                @if (Session["KID"] != null)
                {


                    <form method="post" action="/Home/Konu_Ac" enctype="multipart/form-data">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label class="form-control">Başlık Giriniz</label>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="Ad" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label class="form-control">Kategori Seçiniz...</label>
                                </div>
                                <div class="col-md-6">
                                    <select class="form-control" name="Kategori_ID">
                                        <option value="" selected>Seçiniz</option>
                                        @foreach (var x in Model.TBL_Kategori)
                                        {
                                            <option value="@x.ID">@x.Ad</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <label class="form-control">Kapak Fotoğrafı</label>
                                </div>
                                <div class="col-md-6">
                               <input type="file" class="form-control" name="dd" />
                                </div>
                            </div>
                            @Html.TextAreaFor(m => m.TBL_Entri_Duzenle.Aciklama, new { @class = "form-control" })
                            <br />
                            <button type="submit" class="btn btn-info col-md-12">Yorum Yap</button>
                        </div>
                    </form>

                }
                else
                {
                    <br />
                    <div class="alert alert-danger" role="alert">
                        Lütfen Giriş Yapınız..
                    </div>
                }
            </div>
