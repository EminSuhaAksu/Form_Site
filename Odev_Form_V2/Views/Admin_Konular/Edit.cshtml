@model Odev_Form_V2.Models.ViewModel.Admin_View_Model

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}


<ul class="breadcrumb">
    <li><a href="#">Anasayfa</a></li>
    <li class="active">Konular</li>
    <li class="active">Edit</li>
</ul>
<!-- END BREADCRUMB -->
<!-- PAGE TITLE -->
<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> Konular Edit Sayfamız</h2>
</div>
<!-- END PAGE TITLE -->
<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">

    <div class="row">
     
        <div class="col-md-12">

            <!-- START DEFAULT DATATABLE -->
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">


                        @using (Html.BeginForm("Edit", "Admin_Konular", FormMethod.Post,
                             new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.TBL_Konu_Duzenle.ID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.TBL_Konu_Duzenle.Ad, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TBL_Konu_Duzenle.Ad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TBL_Konu_Duzenle.Ad, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                @Html.LabelFor(model => model.TBL_Konu_Duzenle.Kapak_Foto, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="file" class="form-control" name="Kapak_Foto" value="" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TBL_Konu_Duzenle.Kategori_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <select class="form-control" name="Kategori_ID">

                                        @foreach (var item in Model.TBL_Kategori)
                                        {
                                            <option value="@item.ID">@item.Ad</option>
                                        }

                                    </select>
                                </div>
                            </div>

                             

                            <div class="form-group">
                                @Html.LabelFor(model => model.TBL_Konu_Duzenle.EKlenme_Tarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TBL_Konu_Duzenle.EKlenme_Tarihi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TBL_Konu_Duzenle.EKlenme_Tarihi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TBL_Konu_Duzenle.Aktif, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.TBL_Konu_Duzenle.Aktif)
                                        @Html.ValidationMessageFor(model => model.TBL_Konu_Duzenle.Aktif, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div> 
                            <div class="form-group">
                                @Html.LabelFor(model => model.TBL_Konu_Duzenle.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.TBL_Konu_Duzenle.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TBL_Konu_Duzenle.Aciklama, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        }

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                    </div>
                </div>
            </div>
            <!-- END DEFAULT DATATABLE -->
            <!-- START SIMPLE DATATABLE -->
            <!-- END SIMPLE DATATABLE -->

        </div>
    </div>

</div>
<!-- PAGE CONTENT WRAPPER -->



