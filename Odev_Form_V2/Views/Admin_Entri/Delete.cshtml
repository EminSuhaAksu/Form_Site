@model Odev_Form_V2.Models.ViewModel.Admin_View_Model

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<ul class="breadcrumb">
    <li><a href="#">Anasayfa</a></li>
    <li class="active">Entri</li>
</ul>
<!-- END BREADCRUMB -->
<!-- PAGE TITLE -->
<div class="page-title">
    <h2><span class="fa fa-arrow-circle-o-left"></span> Entri Sayfamız</h2>
</div>
<!-- END PAGE TITLE -->
<!-- PAGE CONTENT WRAPPER -->
<div class="page-content-wrap">

    <div class="row">
        <div class="col-md-12"> 
            <!-- START DEFAULT DATATABLE -->
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-responsive">

                        <h3>Silmek İstediğinize Emin Misiniz ?</h3>
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.TBL_Entri_Duzenle.Aciklama)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TBL_Entri_Duzenle.Aciklama)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.TBL_Entri_Duzenle.Konu_ID)
                                </dt>

                                <dd>
                                    @foreach (var x in Model.TBL_Konu)
                                    {
                                        if (Model.TBL_Entri_Duzenle.Konu_ID == x.ID)
                                        {
                                           @x.Ad
                                        }
                                    }
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.TBL_Entri_Duzenle.Kullanici_ID)
                                </dt>

                                <dd>
                                    @foreach (var x in Model.TBL_Kullanici)
                                    {
                                        if (Model.TBL_Entri_Duzenle.Kullanici_ID == x.ID)
                                        {
                                            @x.Ad_Soyad
                                        }
                                    }
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.TBL_Entri_Duzenle.Aktif)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TBL_Entri_Duzenle.Aktif)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.TBL_Entri_Duzenle.Eklenme_Tarihi)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TBL_Entri_Duzenle.Eklenme_Tarihi)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-default" /> |
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
            <!-- END DEFAULT DATATABLE -->
            <!-- START SIMPLE DATATABLE -->
            <!-- END SIMPLE DATATABLE -->

        </div>
    </div>

</div>
<!-- PAGE CONTENT WRAPPER -->
